<h1 class="heading">Users</h1>
<%= render 'layouts/admin_dash' %>

<% if @users != [] %> 
<div class="panel panel-default table-responsive">
  <table class="table table-hover">  
    <thead>  
      <tr>    
        <th>Name</th>
        <th>Joined</th>
      </tr>  
    </thead>  
    <tbody>  
     <% @users.each do |user| %>
     <tr>
      <td><%= user.name %></td>
      <td><%= user.created_at.to_formatted_s(:long) %></td>
    </tr>
    <% end %>
  </tbody>
</table>  
</div>
<% else %>
<p>No Users registered.</p>
<% end %>