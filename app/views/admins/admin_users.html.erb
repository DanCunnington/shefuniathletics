<h1 class="heading">Admins</h1>
<%= render 'layouts/admin_dash' %>

<div class="panel panel-default table-responsive">
  <table class="table table-hover">  
    <thead>  
      <tr>    
        <th>First Name</th>
        <th>Email Address</th>
        <th>Joined</th>
        <th></th>
        <th></th>
      </tr>  
    </thead>  
    <tbody>  
     <% @users.each do |user| %>
     <tr>
      <td><%= user.first_name %></td>
      <td><%= user.email %></td>
      <td><%= user.created_at.to_formatted_s(:long) %></td>
      <% if !user.super_admin %>
        <td><%= link_to 'Delete', user, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger edit-btn" %></td>
      <% end %>
    </tr>
    <% end %>
  </tbody>
</table>  
</div>

<div class="signup_cont two-em-spaced">
  <%= link_to "New Admin", new_admin_path, id: "new_fix", class: "btn btn-block btn-large btn-warning", "data-no-turbolink" => true %>
</div>