<h1 class="heading">Events</h1>

<%= render 'layouts/admin_dash' %>

<div class="signup_cont two-em-spaced">
  <%= link_to "New Event", new_event_path, id: "new_event", class: "btn btn-block btn-large btn-warning", "data-no-turbolink" => true %><br>
</div>

<% if @events != [] %> 
<div class="panel panel-default table-responsive">
  <table class="table table-hover">  
    <thead>  
      <tr>
        <th></th> 
        <th>Description</th>
        <th></th>
        <th></th>
      </tr>  
    </thead>  
    <tbody class="events-sortable">  

     <% @events.each do |event| %>
     <tr class="event" data-id="<%= event.id %>">
      <td><i class="fa fa-bars"></i></td>
      <td><%= event.description %></td>
       <td><%= link_to 'Edit', edit_event_path(event), class:"btn btn-info edit-btn", "data-no-turbolink" => true  %></td>
      <td><%= link_to 'Delete', event, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger edit-btn" %></td>   
    </tr>
    <% end %>
  </tbody>
</table>  
</div>
<% else %>
<p>Page Content will appear shortly.</p>
<% end %>

<div class="signup_cont two-em-spaced">
  <%= link_to "New Event", new_event_path, id: "new_event", class: "btn btn-block btn-large btn-warning", "data-no-turbolink" => true %><br>
</div>