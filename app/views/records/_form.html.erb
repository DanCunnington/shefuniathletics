<div class="signup_cont spaced">

 <%= form_for(@record) do |f| %>
  <% if @record.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@record.errors.count, "error") %> prohibited this record from being saved:</h2>

      <ul>
      <% @record.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>



  <div class="field">
    <%= f.label :event, class: "control-label" %><br />
    <%= f.select(:event, Event.find(:all).collect {|u| [u.description]}.uniq, {}, {class: "form-control"})%>
  </div>

  <div class="field">
    <%= f.label :event_type, class: "control-label" %><br />
    <%= f.select(:event_type, EventType.find(:all).collect {|u| [u.description]}.uniq, {}, {class: "form-control"})%>
  </div>
  <div class="field">
    <%= f.label :athlete, class: "control-label" %><br />
    <%= f.text_field :athlete, class: "form-control" %>
  </div>
  <div class="field">
    <%= f.label :time, class: "control-label" %><br />
    <%= f.text_field :time, class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label :competition, class: "control-label" %><br />
    <%= f.text_field :competition, class: "form-control" %>
  </div>
  <div class="actions two-em-spaced">
    <%= f.submit class: "btn btn-block btn-large btn-warning spaced" %>
    <%= link_to 'Back', admin_records_path, id: "new_fix", class: "btn btn-block btn-default spaced"  %>
  </div>



  <% end %>
</div>

