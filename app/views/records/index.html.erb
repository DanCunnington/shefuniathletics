<h1 class="heading">Club Records</h1>

<h4 class="montserrat gold">Male Outdoor</h4>
<% if @male_outdoors != [] %> 
<div class="panel panel-default table-responsive">
  <table class="table table-hover">  
    <thead>  
      <tr>    
        <th>Event</th>
        <th>Athlete</th>
        <th>Time</th>
        <th>Competition</th> 
      </tr>  
    </thead>  
    <tbody>  
     <% @male_outdoors.each do |record| %>
     <tr>
      <td><%= record.event %></td>
      <td><%= record.athlete %></td>
      <td><%= record.time %></td>
      <td><%= record.competition %></td>  
    </tr>
    <% end %>
  </tbody>
</table>  
</div>
<% else %>
<p>Male Outdoor Records will appear shortly.</p>
<% end %>

