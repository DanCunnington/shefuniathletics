
<h1 class="heading">Socials</h1>

<div class="row">
  <div class="col-md-7">
    <% if @socials != [] %> 
      <div class="panel panel-default table-responsive">
        <table class="table table-hover">  
          <thead>  
            <tr>    
              <th>Name</th>
              <th>Date</th>
              <th>Facebook Event</th>  
            </tr>  
          </thead>  
          <tbody>  
           <% @socials.each do |social| %>
           <tr>
            <td><%= social.name %></td>
            <td><%= social.date.to_formatted_s(:long) %></td>
            <% if social.facebook_event_link != "" %>
            <td><%= link_to "Here", social.facebook_event_link, class:"btn btn-warning edit-btn", target: "_blank" %></td>
            <% else %>
            <td></td>
            <% end %>
          </tr>
          <% end %>
        </tbody>
      </table>  
      </div>

    <% else %>
      <p>Social events will appear shortly.</p>
    <% end %>

  </div>

  <div class="col-md-5">
    <% if @image != [] %>
      <% baseCloudinaryURL = 'http://res.cloudinary.com/shefuniathletics/image/upload/w_500,h_300,c_fit/'%>
      <%= image_tag(baseCloudinaryURL+@image, class: "membership center-block")%>
    <% else %>
      <p>Content will appear shortly.</p>
    <% end %>
  </div>
</div>



